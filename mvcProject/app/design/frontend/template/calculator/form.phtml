        if ($_SERVER["REQUEST_METHOD"] == "POST") {
            // Fetching user inputs
            // print_r($_POST);
            $username = $_POST["username"];
            $operator = $_POST["operator"];
            $number1 = floatval($_POST["number1"]);
            $number2 = floatval($_POST["number2"]);

            // Calculating the result based on the selected operator
            $result = null;
            switch ($operator) {
                case "add":
                    $result = $number1 + $number2;
                    break;
                case "subtract":
                    $result = $number1 - $number2;
                    break;
                case "multiply":
                    $result = $number1 * $number2;
                    break;
                case "divide":
                    $result = $number1 / $number2;
                    break;
                default:
                    $result = "Invalid operator";
            }

            // Displaying the result
            echo "$username! The result is: $number1 $operator $number2 equals $result.";
        }
